{
  "name": "pool-intelligence-pro-backend",
  "version": "2.0.0",
  "description": "Enterprise-grade Liquidity Pool Intelligence System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build:frontend": "if [ -d ../frontend ] && [ ! -f public/index.html ]; then echo '[BUILD] Frontend not found in public/, building...' && cd ../frontend && npm install && npm run build && cd ../backend && rm -rf public && cp -r ../frontend/dist public && echo '[BUILD] Frontend copied to backend/public'; else echo '[BUILD] Frontend already in public/ or no ../frontend dir'; fi",
    "build": "npm run build:frontend && npx prisma generate && tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:push": "prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.35",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.1",
    "@types/uuid": "^9.0.7",
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.64.0",
    "prisma": "^5.7.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "tsx": "^4.6.2"
  }
}
